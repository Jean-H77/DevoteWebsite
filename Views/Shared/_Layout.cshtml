<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevoteWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-default-center navbar-expand-sm navbar-toggleable-sm navbar-light bg-light.bg-gradient border-bottom box-shadow mb-3 transparent bg-opacity-10">
            <div class="container-fluid">
                <a class="navbar-brand logo-dark" asp-area="" asp-controller="Home" asp-action="Index">Name Goes Here</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
                    <ul class="nav navbar-nav d-flex justify-content-center w-100">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Play" asp-action="Index">Play</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-sm btn-outline-secondary" href="https://discord.gg/6HapCt9zaw" target="_blank" rel="noopener noreferrer">Discord</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Vote">Vote</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Store" asp-action="Index">Store</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Name Goes Here@*  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/particles-js/particles.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
